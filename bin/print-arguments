#!/usr/bin/env ruby

require_relative "../lib/dorian-arguments"

pp Dorian::Arguments.parse(
     name: :string,
     count: :integer,
     size: :decimal,
     wearing: {
       default: true
     },
     not_wearing: {
       default: "true"
     },
     version: {
       type: :boolean,
       alias: :v
     },
     help: {
       type: :boolean,
       alias: :h
     }
   )
